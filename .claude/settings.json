{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "WebSearch",
      "WebFetch",
      "Bash(ls:*)",
      "Bash(touch:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(which:*)",
      "Bash(pwd)",
      "Bash(echo:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(mkdir:*)",
      "Bash(make:*)",
      "Bash(go:*)",
      "Bash(ginkgo:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr :*)",
      "Bash(gh api repos/*/pulls/*/comments)",
      "Edit(**/*.go)",
      "Edit(**/*.graphql)",
      "Edit(**/*.yml)",
      "Edit(**/*.yaml)",
      "Edit(Makefile)",
      "Edit(go.mod)",
      "Edit(go.sum)",
      "Edit(.gitignore)",
      "Edit(genqlient.yml)",
      "Edit(docker-compose.yml)",
      "Edit(renovate.json)",
      "Edit(README.md)",
      "Edit(CLAUDE.md)",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id"
    ],
    "deny": [
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.config/**/credentials)",
      "Read(.env.*)",
      "Edit(~/.ssh/**)",
      "Edit(~/.aws/**)",
      "Edit(~/.config/**/credentials)",
      "Edit(.env*)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Write(~/.config/**/credentials)",
      "Write(.env*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(chmod 777:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(psql:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Submarine.aiff"
          }
        ]
      }
    ]
  }
}
